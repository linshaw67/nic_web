<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.importadorabacco.web.dao.UserAccountResetDao">

    <resultMap type="com.importadorabacco.web.model.ResetToken" id="resetTokenResultMap">
        <id property="id" column="id" />
        <result property="email" column="email" />
        <result property="status" column="status" />
        <result property="token" column="token" />
        <result property="tokenExpireTime" column="token_expire_time" />
        <result property="createTime" column="create_time" />
    </resultMap>

    <insert id="insert" keyProperty="id" useGeneratedKeys="true" parameterType="com.importadorabacco.web.model.ResetToken">
        insert into user_account_reset (
        email,
        status,
        token,
        token_expire_time
        ) values (
        #{email},
        #{status},
        #{token},
        #{tokenExpireTime}
        )
    </insert>

    <update id="updateStatus" parameterType="java.util.Map">
        update user_account_reset set status = #{status} where token = #{token}
    </update>

    <select id="selectLastUnusedToken"  resultMap="resetTokenResultMap" parameterType="java.lang.String">
    <![CDATA[
        select * from user_account_reset where email = #{email} and status = 0 and token_expire_time > now() limit 1;
    ]]>
    </select>

    <select id="selectByToken"  resultMap="resetTokenResultMap" parameterType="java.lang.String">
        select * from user_account_reset where token = #{token} ;
    </select>
</mapper>
